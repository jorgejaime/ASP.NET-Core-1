<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment names="Development">
        <link rel="stylesheet" asp-href-include="~/css/*.css"/>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="!/css/min/site.min.css" asp-append-version="true" />            
    </environment>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>                    
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">AppSensor</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
       
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - AppSensor</p>
        </footer>
    </div>

    <environment names="Development">
        <script type="text/javascript" src="~/js/jquery.js"></script>
        <script type="text/javascript" src="~/js/bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script type="text/javascript" src="~/js/min/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
   
</body>
</html>
